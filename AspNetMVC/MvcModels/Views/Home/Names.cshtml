@model List<string>
@{
    ViewBag.Title = "Names";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>Имена</h2>
@if (Model.Count == 0)
{
    using (Html.BeginForm())
    {
        for (int i = 0; i < 3; i++)
        {
            <div>
                <label>@(i + 1):</label>
                @Html.TextBox("names")
            </div>
        }
        <button type="submit">Отправить</button>
    }
}
else
{
    foreach (string name in Model)
    {
        <p>@name</p>
    }
    @Html.ActionLink("Назад", "Names");
}